<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarComentario">

    <TextView
        android:id="@+id/AgregarComentario_Tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:text="Tu comentario"
        android:textSize="20sp"
        android:textStyle="bold"/>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/AgregarComentario_Tag2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="248dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AgregarComentario_Tag1"
        android:layout_marginTop="60dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/AgregarComentario_Comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comentario" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/AgregarComentario_Publicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/AgregarComentario_Tag2"
        app:layout_constraintTop_toBottomOf="@id/AgregarComentario_Tag2"
        android:text="Publicar"
        android:textStyle="bold"/>



</androidx.constraintlayout.widget.ConstraintLayout>